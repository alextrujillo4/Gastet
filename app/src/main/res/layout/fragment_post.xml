<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            tools:context=".ui.main.PostFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="9dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:padding="48dp"
                          android:orientation="vertical">

                <ImageView
                        android:id="@+id/postImageIV"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/round_image_24"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/postAgregarImagenBtn"
                        android:layout_width="wrap_content"
                        android:textColor="@color/secondaryColor"
                        android:layout_height="wrap_content"
                        app:iconTint="@color/secondaryColor"
                        android:fontFamily="@font/ubuntu"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:text="Escoje una Imagen" app:strokeColor="@color/secondaryColor"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.tabs.TabLayout
                android:id="@+id/postPostTypeTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:tabIndicatorColor="@color/secondaryColor"
                app:tabTextColor="@color/whiteColor"
                app:tabSelectedTextColor="@color/whiteColor"
                app:tabIconTint="@color/whiteColor"
                android:background="@drawable/tablayout_background"
                app:tabMode="fixed"
                app:tabBackground="@drawable/tablayout_selector"
                app:tabPaddingStart="16dp"
                app:tabPaddingEnd="16dp"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@null"
                app:tabTextAppearance="@style/TabTextAppearance">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/icon_perdido"
                    android:text="@string/perdido"/>
            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/icon_encontrado"
                    android:text="@string/encontrado"/>
            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/icon_adopcion"
                    android:text="@string/adopci_n"/>
        </com.google.android.material.tabs.TabLayout>

        ¡
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="¿Dónde se te perdió?"
                  android:fontFamily="@font/ubuntu_bold"
                  android:layout_marginLeft="16dp"
                  android:layout_marginRight="16dp"
                  android:layout_marginTop="16dp"
                  android:textSize="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/grayColor"
                android:textColorHint="@color/grayColor"
                app:boxStrokeColor="@color/secondaryColor"
                app:hintTextColor="@color/secondaryColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="8dp">
            <EditText
                    android:id="@+id/postDescripcionET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Descripción"
                    android:inputType="textMultiLine"
                    android:textColor="@color/grayColor" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tipo de mascota"
                  android:fontFamily="@font/ubuntu_bold"
                  android:layout_marginLeft="16dp"
                  android:layout_marginRight="16dp"
                  android:layout_marginTop="16dp"
                  android:textSize="24dp"/>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/postPetypeTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:tabIndicatorColor="@color/secondaryColor"
                app:tabTextColor="@color/whiteColor"
                app:tabSelectedTextColor="@color/whiteColor"
                app:tabIconTint="@color/whiteColor"
                android:background="@drawable/tablayout_background"
                app:tabMode="fixed"
                app:tabBackground="@drawable/tablayout_selector"
                app:tabPaddingStart="16dp"
                app:tabPaddingEnd="16dp"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@null"
                app:tabTextAppearance="@style/TabTextAppearance">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/icon_perro"
                    android:text="@string/perro"/>
            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/icon_gato"
                    android:text="@string/gato"/>
            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/icon_otro"
                    android:text="@string/otro"/>
        </com.google.android.material.tabs.TabLayout>


        <TextView
                android:id="@+id/postDasRecompTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="¿Das recompensa?"
                android:textSize="24dp"/>


        <com.google.android.material.tabs.TabLayout
                android:id="@+id/postRecompensaTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:tabIndicatorColor="@color/secondaryColor"
                app:tabTextColor="@color/whiteColor"
                app:tabSelectedTextColor="@color/whiteColor"
                app:tabIconTint="@color/whiteColor"
                android:background="@drawable/tablayout_background"
                app:tabMode="fixed"
                app:tabBackground="@drawable/tablayout_selector"
                app:tabPaddingStart="16dp"
                app:tabPaddingEnd="16dp"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@null"
                app:tabTextAppearance="@style/TabTextAppearance">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/si"
            />
            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"/>
        </com.google.android.material.tabs.TabLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/postCostoTIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/grayColor"
                android:textColorHint="@color/grayColor"
                app:boxStrokeColor="@color/secondaryColor"
                app:hintTextColor="@color/secondaryColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="8dp">
            <EditText
                    android:id="@+id/postCostoET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="¿Cuánto es?"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/grayColor" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/postNombreTIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/grayColor"
                android:textColorHint="@color/grayColor"
                app:boxStrokeColor="@color/secondaryColor"
                app:hintTextColor="@color/secondaryColor"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="8dp">
            <EditText
                    android:id="@+id/postNombreET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textColor="@color/grayColor" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/postSexTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Sexo"
                android:textSize="24dp"/>


        <com.google.android.material.tabs.TabLayout
                android:id="@+id/postGenderTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/ubuntu"
                app:tabIndicatorColor="@color/secondaryColor"
                app:tabTextColor="@color/whiteColor"
                app:tabSelectedTextColor="@color/whiteColor"
                app:tabIconTint="@color/whiteColor"
                android:background="@drawable/tablayout_background"
                app:tabMode="fixed"
                app:tabBackground="@drawable/tablayout_selector"
                app:tabPaddingStart="16dp"
                app:tabPaddingEnd="16dp"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@null"
                app:tabTextAppearance="@style/TabTextAppearance">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/icon_male"
                    android:text="@string/macho"/>
            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/icon_female"
                    android:text="@string/hembra"/>
        </com.google.android.material.tabs.TabLayout>

        <TextView
                android:id="@+id/postVacunadoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="¿Vacunado y desparacitado?"
                android:textSize="24dp"/>



        <com.google.android.material.tabs.TabLayout
                android:id="@+id/postVacunadoTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:tabIndicatorColor="@color/secondaryColor"
                app:tabTextColor="@color/whiteColor"
                app:tabSelectedTextColor="@color/whiteColor"
                app:tabIconTint="@color/whiteColor"
                android:background="@drawable/tablayout_background"
                app:tabMode="fixed"
                app:tabBackground="@drawable/tablayout_selector"
                app:tabPaddingStart="16dp"
                app:tabPaddingEnd="16dp"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@null"
                app:tabTextAppearance="@style/TabTextAppearance">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/claro"
            />
            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_lo_creo"/>
        </com.google.android.material.tabs.TabLayout>



        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_margin="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/grayColor"
                android:textColorHint="@color/grayColor"
                app:boxStrokeColor="@color/secondaryColor"
                app:hintTextColor="@color/secondaryColor">
            <EditText
                    android:id="@+id/postRazaET"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/ubuntu"
                    android:layout_height="wrap_content"
                    android:hint="Raza"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/grayColor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/grayColor"
                android:textColorHint="@color/grayColor"
                app:boxStrokeColor="@color/secondaryColor"
                app:hintTextColor="@color/secondaryColor">
            <EditText
                    android:id="@+id/postPhoneET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/grayColor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/grayColor"
                android:textColorHint="@color/grayColor"
                app:boxStrokeColor="@color/secondaryColor"
                app:hintTextColor="@color/secondaryColor">
            <EditText
                    android:id="@+id/postComentariosET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Comentarios Adicionales"
                    android:singleLine="false"
                    android:textColor="@color/grayColor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/postAgregarBtn"
                android:textColor="@color/whiteColor"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:fontFamily="@font/ubuntu_medium"
                app:backgroundTint="@color/secondaryColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar"/>
    </LinearLayout>

</ScrollView>



